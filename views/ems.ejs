<script>
  var socket = io();
  $('form').submit(function(){
    socket.emit('chat message', $('#m').val());
    $('#m').val('');
    return false;
  });

socket.on('chat message', function(msg,time){
    $('#messages').append($('<li>').text(time+':'+msg));
    $('#power').text(msg);
    $('#updatetime').text(time);
  });
